                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:text="Your Compliance"
                            android:layout_gravity="top"
                            android:layout_marginTop="-5dp"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:gravity="center"/>

                    </LinearLayout>



                </LinearLayout>

