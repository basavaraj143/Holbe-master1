<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="100"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginLeft="10dp"
            android:src="@drawable/hamburger"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="Coming Up"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="80" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/calenderticon"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="10"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginLeft="40dp"
                android:background="#80000000">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="April 24, 2016"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_gravity="start"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    android:background="@drawable/workoutsgrn"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:gravity="start|center"
                    android:layout_weight="70"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="1:30 PM"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Workout"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_gravity="start"
                android:layout_marginLeft="40dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="98"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:weightSum="100">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_weight="40">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:background="@drawable/comingupbg"
                            android:layout_weight="40">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20sp"
                                android:layout_marginLeft="10dp"
                                android:text="WORKOUT"

                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#fff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="60"
                            android:padding="10dp"
                            android:background="#fff"
                            android:weightSum="100"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="20"
                                android:text="Situps"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="4 Reps of 10 Situps"
                                android:layout_weight="20"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="20"
                                android:text="at 10:00 AM/6:00 PM"
                                android:textSize="16sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="40"
                                android:padding="3dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:background="@drawable/completedbtn"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"

                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"

                                    android:background="@drawable/partialbtn"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>