        android:src="@drawable/logoname"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/leaf"
        android:layout_centerHorizontal="true"

        android:layout_marginRight="45dp"
        />
